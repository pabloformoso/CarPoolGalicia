<h2>Entra en CarPool</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="span6">
      <div>
        <%= f.label :email, "Correo electronico" %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="span6">
      <div>
        <%= f.label :name, "Nombre" %>
        <%= f.email_field :name %>
      </div>
      <div>
        <%= f.label :lastname, "Apellidos" %>
        <%= f.email_field :lastname %>
      </div>
      <div>
        <%= f.label :city, "Ciudad" %>
        <%= f.email_field :city %>
      </div>
      <div>
        <%= f.label :phone_number, "TelÃ©fono" %>
        <%= f.email_field :phone_number %>
      </div>
    </div>
  </div>
  
  <div><%= f.submit "Registrarse" %></div>
<% end %>

<%= render "devise/shared/links" %>
