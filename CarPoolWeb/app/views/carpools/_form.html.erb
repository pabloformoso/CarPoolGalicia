<%= form_for @carpool, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :start_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :destination_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :destination_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :departure, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :departure, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :driver_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:carpool, :driver_id, User.all, :id, :email, :prompt => 'Conductor') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :seats, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :seats, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                carpools_path, :class => 'btn' %>
  </div>
<% end %>
